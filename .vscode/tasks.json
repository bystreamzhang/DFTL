{
	"version": "2.0.0",
	"options": {
        "cwd": "${workspaceFolder}/build"
    },
	"tasks": [
        {
            "type": "shell",
            "label": "clean-data",
            "command": "rm",
            "args": [
                "-f",
                "map.ssd",
                "../output.txt",
                "../output2.txt" 
            ],
            "detail": "删除上次运行产生的 SSD 模拟文件和输出文件，确保环境纯净"
        },
        {
            "type": "shell",
            "label": "make clean",
            "command": "make clean",
            "args": []
        },
		{
            "label": "cmake",
            "command": "cmake",
            "args": [
                ".."
            ]
        },
        {
            "label": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": []
        },
        {
            "label": "build-task",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean-data",
                "make clean",
                "cmake",
                "make"
            ]
        }
	]
}